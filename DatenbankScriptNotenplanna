CREATE DATABASE Notenplana;

CREATE TABLE Profil
(
    ID_Profil INT NOT NULL AUTO_INCREMENT,
    Benutzername VARCHAR(30),
    Passwort VARCHAR(30),
    PRIMARY KEY(ID_Benutzer),
    FOREIGN KEY(ID_Fach) REFERENCES Fach(ID_Fach)
);


CREATE TABLE FachHj1
(
    ID_FachHj1 INT NOT NULL AUTO_INCREMENT,
    Fach VARCHAR(30),
    Pruefungsfach BOOLEAN,
    PRIMARY KEY(ID_FachHj1),
    FOREIGN KEY(ID_NoteHj1) REFERENCES Note(ID_NoteHj1)
);

CREATE TABLE NoteHj1
(
    ID_NoteHj1 INT NOT NULL AUTO_INCREMENT,
    Note INT,
    Halbjahresnote INT,
    Jahresnote INT,
    PRIMARY KEY(ID_NoteHj1)
);

CREATE TABLE FachHj2
(
    ID_FachHj2 INT NOT NULL AUTO_INCREMENT,
    Fach VARCHAR(30),
    Pruefungsfach BOOLEAN,
    PRIMARY KEY(ID_FachHj2),
    FOREIGN KEY(ID_NoteHj2) REFERENCES Note(ID_NoteHj2)
);

CREATE TABLE NoteHj2
(
    ID_NoteHj2 INT NOT NULL AUTO_INCREMENT,
    Note INT,
    Halbjahresnote INT,
    Jahresnote INT,
    PRIMARY KEY(ID_NoteHj2)
);